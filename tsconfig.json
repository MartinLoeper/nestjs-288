{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        "allowJs": true,
        "noLib": false,
        "outDir": "bin/"
    },
    "exclude": [
        "node_modules",
        "bin"
    ],
    "files": [
        "server/server.ts",
        "client/client.ts"
    ],
    "compileOnSave": true
}